---
import MainLayouts from "../layouts/MainLayouts.astro";

//Server only
const name = "Universe";
const initialTime = new Date().toLocaleTimeString();
const currentYear = new Date().getFullYear();
---

<MainLayouts title="Bienvenido a mi App Astro" description="Una app construida con Astro, rÃ¡pida y moderna.">
  <section>
    <h1>Hola, {name} ðŸŒŒ</h1>
    <p>Hora inicial del servidor: {initialTime}</p>
    <p id="current-time" aria-live="polite">Actualizando hora...</p>
  </section>

  <footer>
    <p>&copy; {currentYear} - Todos los derechos reservados.</p>
  </footer>

  <script type="module" is:inline>
    const timeEl = document.querySelector("#current-time");
    const updateTime = () => {
      const now = new Date().toLocaleTimeString();
      timeEl.textContent = `Hora actual (cliente): ${now}`;
    };
    updateTime();
    setInterval(updateTime, 1000);
  </script>
</MainLayouts>
